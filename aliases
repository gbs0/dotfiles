# Get External IP / local IPs
alias ip="curl ipinfo.io/ip"
alias ips="ifconfig -a | perl -nle'/(\d+\.\d+\.\d+\.\d+)/ && print $1'"
alias speedtest="wget -O /dev/null http://speedtest.wdc01.softlayer.com/downloads/test10.zip"

# Quickly serve the current directory as HTTP
alias serve='ruby -run -e httpd . -p 8000'  # Or python -m SimpleHTTPServer :)

#Zsh reload
alias reload!="source ~/.zshrc"

# Git
branch=$(git rev-parse --abbrev-ref HEAD)
alias ga="git add"
alias gb="git branch"
alias gc="git commit"
alias gd="git diff"
alias gco="git checkout"
alias gst="git status"
alias gcm="git commit -m"
alias gpom="git push origin $branch"
alias gauto="git add . && git commit -m 'automated commit' && git push --set-upstream origin $(git rev-parse --abbrev-ref HEAD)"
alias gpp="git pull origin $branch"

# Jupyter Notebook
alias jp="jupyter notebook"

#Cheat.sh
alias smartcat="cht.sh"

#Clang GCC complete compile
alias gag="gcc -Wall -Wextra -Werror=unused-but-set-variable *.c -o main.out && ./main.out"

#Norminette Linter
alias norma="norminette -R CheckForbiddenSourceHeader #{$1} | grep -E '^(Error|Warning)'"
